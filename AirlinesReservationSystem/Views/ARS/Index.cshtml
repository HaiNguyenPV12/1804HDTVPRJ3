@model AirlinesReservationSystem.Models.ars.FlightSearch
@{
    ViewBag.Title = "Index";
}

<link href="~/Content/ars/index.css" rel="stylesheet" />


<div class="row flightSearch">
    <div class="flightSearch-content">
        <h3>Search for flights</h3>
        @using (Html.BeginForm("Index", "ARS", FormMethod.Post, new { @id = "flightSearchForm" }))
        {
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="btn-group btn-group-toggle" data-toggle="buttons">
                <label class="btn btn-secondary active">
                    <input type="radio" name="IsRoundTrip" id="optionOneWay" autocomplete="off" checked value="false"> One way
                </label>
                <label class="btn btn-secondary">
                    <input type="radio" name="IsRoundTrip" id="optionRoundTrip" autocomplete="off" value="true">Roundtrip
                </label>
            </div>
            <div class="container-fluid">
                <div class="form-group row">
                    <div class="col-md-4 row">
                        <label class="col-form-label">From: </label>
                        @Html.TextBoxFor(item => item.Departure, new { @class = "form-control col-md" })
                        @*@Html.ValidationMessageFor(item => item.Departure, "", new { @class = "text-danger" })*@
                    </div>
                    <!--reverse button-->
                    <div class="col-md-4 row mx-auto">
                        <button type="button" class="btn btn-light mx-auto" tabindex="99">swap</button>
                    </div>
                    <div class="col-md-4 row">
                        <label class="col-form-label">To: </label>
                        @Html.TextBoxFor(item => item.Destination, new { @class = "form-control col-md" })
                        @*@Html.ValidationMessageFor(item => item.Destination, "", new { @class = "text-danger" })*@
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label">Departing:</label>
                    @*<input type="date" name="DepartureTime" value="" class="form-control col-md-3" />*@
                    @Html.TextBoxFor(item => item.DepartureTime, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control col-md-3" })
                    @*@Html.ValidationMessageFor(item => item.DepartureTime, "", new { @class = "text-danger" })*@
                </div>
                <h5 class="row">Travelers:</h5>
                <div class="form-group row">
                    <label class="col-form-label">Adults:</label>
                    @Html.TextBoxFor(item => item.Adult, new { @Value = "1", @class = "form-control col-md-1", @min = "0", @type = "number" })
                    <label class="col-form-label">Children:</label>
                    <input type="number" name="Children" value="0" class="form-control col-md-1" min="0" />
                    <label class="col-form-label">Seniors:</label>
                    <input type="number" name="Senior" value="0" class="form-control col-md-1" min="0" />
                </div>
                <div class="row">
                    <button type="submit" class="btn btn-ars-dark">Search</button>
                </div>
            </div>
        }
    </div>

</div>

