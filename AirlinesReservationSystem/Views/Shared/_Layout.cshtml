<body>
    <!--start of navbar-->
    <nav class="navbar navbar-expand-lg fixed-top navbar-light bg-ars">
        <div class="container">
            <a href="/ars/Index" class="navbar-brand">
                <img src="~/img/ars/Logo.png" alt="ARS" class="d-inline-block align-top img-fluid" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a href="#" class="nav-link">Something</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle waves-effect waves-light" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                        <div class="dropdown-menu dropdown-info" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item waves-effect waves-light" href="#">Action</a>
                            <a class="dropdown-item waves-effect waves-light" href="#">Another action</a>
                            <a class="dropdown-item waves-effect waves-light" href="#">Something else here</a>
                        </div>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        @if (Session["user"] == null)
                        {
                            @Html.ActionLink("Login", "Login", "ARS", new { @class = "nav-link" })
                        }
                        else
                        {
                            <a class="nav-link dropdown-toggle waves-effect waves-light" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Welcome!<b>@(Session["user"])</b></a>
                            <div class="dropdown-menu dropdown-info" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item waves-effect waves-light" href="@Url.Action("ProfileUser","ARS")">Profile</a>
                                <a class="dropdown-item waves-effect waves-light" href="@Url.Action("Logout","ARS")">Logout</a>
                            </div>
                            @*<div class="navbar-text">Welcone!<b>@(u.UserID) @Html.ActionLink("Logout", "Logout", "ARS", new { @class = "nav-link" })</b></div>*@

                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        <p></p>
        @RenderBody()
    </div>
    <footer class="bg-ars-light">
        <div class="container">
            <div class="text-md-center">
                <p>
                    &copy; @DateTime.Now.Year Airline Reservation System Inc.<br />
                    All rights reserved.
                </p>
            </div>
        </div>
    </footer>

    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>