<script>
    $(document).ready(function () {
        var i = 0;
        appendForm();

        function appendForm() {
            $.post("/arsadmin/FlightAddTemplate?index=" + i, function (result) {
                $("#flightAddList").append(result);
                i = i + 1;
            });
        }

        $('#btnAppend').click(function (e) {
            e.preventDefault();
            appendForm();
        });

        $('#btnDeappend').click(function (e) {
            $('#flightRow-' + (i - 1)).remove();
            if (i > 0) {
                i = i - 1;
            }
        });
    });
</script>