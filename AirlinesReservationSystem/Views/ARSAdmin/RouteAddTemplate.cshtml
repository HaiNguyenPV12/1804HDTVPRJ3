@model List<AirlinesReservationSystem.Models.Route>

@{
    ViewBag.Title = "RouteAddTemplate";
    int i = ViewBag.Index;
    Layout = null;
}

<tr id="routeRow-@i">
    <td>
        @Html.DropDownListFor(model => model[i].RAirline, AirlinesReservationSystem.Models.arsadmin.Dropdowns.Airlines(), new { @class = "form-control" })
    </td>
    <td>
        @Html.DropDownListFor(model => model[i].RAircraft, AirlinesReservationSystem.Models.arsadmin.Dropdowns.Aircrafts(), new { @class = "form-control" })
    </td>
    <td>
        @Html.DropDownListFor(model => model[i].Departure, AirlinesReservationSystem.Models.arsadmin.Dropdowns.Airports(), new { @class = "form-control" })
    </td>
    <td>
        @Html.DropDownListFor(model => model[i].Destination, AirlinesReservationSystem.Models.arsadmin.Dropdowns.Airports(), new { @class = "form-control" })
    </td>
</tr>