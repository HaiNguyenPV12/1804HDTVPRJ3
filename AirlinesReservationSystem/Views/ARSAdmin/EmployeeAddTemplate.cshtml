@model List<AirlinesReservationSystem.Models.Employee>
@{
    ViewBag.Title = "EmployeeAddTemplate";
    Layout = null;
    int index = int.Parse(ViewBag.AddIndex.ToString());
}
@index

<div>
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="form-group form-inline" style="">
        @Html.LabelFor(model => model[index].EmpID, htmlAttributes: new { @class = "control-label col-md-2", @style = "text-align:right" })
        <div class="col-md-10">
            @Html.EditorFor(model => model[index].EmpID, new { htmlAttributes = new { @class = "form-control", @style = "width:100%" } })
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-10">@Html.ValidationMessageFor(model => model[index].EmpID, "", new { @class = "text-danger" })</div>
    </div>

    <div class="form-group form-inline">
        @Html.LabelFor(model => model[index].Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model[index].Password, new { htmlAttributes = new { @class = "form-control", @style = "width:100%", @type = "password" } })
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-10">@Html.ValidationMessageFor(model => model[index].Password, "", new { @class = "text-danger" })</div>
    </div>

    <div class="form-group form-inline">
        @Html.LabelFor(model => model[index].Firstname, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.EditorFor(model => model[index].Firstname, new { htmlAttributes = new { @class = "form-control", @style = "width:100%" } })
        </div>
        @Html.LabelFor(model => model[index].Lastname, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.EditorFor(model => model[index].Lastname, new { htmlAttributes = new { @class = "form-control", @style = "width:100%" } })
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-4">@Html.ValidationMessageFor(model => model[index].Firstname, "", new { @class = "text-danger" })</div>
        <div class="col-md-2"></div>
        <div class="col-md-4">@Html.ValidationMessageFor(model => model[index].Lastname, "", new { @class = "text-danger" })</div>
    </div>

    <div class="form-group form-inline">
        @Html.LabelFor(model => model[index].Address, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model[index].Address, new { htmlAttributes = new { @class = "form-control", @style = "width:100%" } })
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-10">@Html.ValidationMessageFor(model => model[index].Address, "", new { @class = "text-danger" })</div>
    </div>

    <div class="form-group form-inline">
        @Html.LabelFor(model => model[index].Phone, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model[index].Phone, new { htmlAttributes = new { @class = "form-control", @style = "width:100%" } })
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-10">@Html.ValidationMessageFor(model => model[index].Phone, "", new { @class = "text-danger" })</div>
    </div>

    <div class="form-group form-inline">
        @Html.LabelFor(model => model[index].Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model[index].Email, new { htmlAttributes = new { @class = "form-control", @style = "width:100%" } })
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-10">@Html.ValidationMessageFor(model => model[index].Email, "", new { @class = "text-danger" })</div>
    </div>

    <div class="form-group form-inline">
        @Html.LabelFor(model => model[index].Sex, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="form-check-inline">
                <label class="form-check-label">
                    @Html.RadioButtonFor(model => model[index].Sex, true, new { @checked = true }) Male
                </label>
            </div>
            <div class="form-check-inline">
                <label class="form-check-label">
                    @Html.RadioButtonFor(model => model[index].Sex, false) Female
                </label>
            </div>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-10">
            @Html.ValidationMessageFor(model => model[index].Sex, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group form-inline">
        @Html.LabelFor(model => model[index].DoB, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model[index].DoB, new { @class = "form-control", @style = "width:100%", @type = "date" })
            @Html.ValidationMessageFor(model => model[index].DoB, "", new { @class = "text-danger" })
        </div>
    </div>

