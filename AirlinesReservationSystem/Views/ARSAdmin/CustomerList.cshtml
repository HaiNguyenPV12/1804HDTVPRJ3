@model IEnumerable<AirlinesReservationSystem.Models.User>
@{
    Layout = null;
}
<link href="~/Content/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/datatables.min.js"></script>
<h2>Customer</h2>
<div class="col-md-12">
    <table class="table table-bordered table-hover table-sm" id="customerListView">
        <thead>
            <tr class="table-ars">
                <th>
                    @Html.DisplayNameFor(model => model.UserID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sex)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CCNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PassportNo_)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Skymiles)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @if (item.Sex)
                        {
                            @:Male
                        }
                        else
                        {
                            @:Female
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CCNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PassportNo_)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Skymiles)
                    </td>
                    <td>
                        <button class="btn btn-warning" onclick="setModal('editcustomer','@item.UserID')">Edit</button>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot></tfoot>
    </table>
</div>
<script>
    $(document).ready(function () {
        $('#customerListView').DataTable();
    })
</script>
