@model IEnumerable<AirlinesReservationSystem.Models.Employee>

<table class="table table-bordered table-hover table-sm">
    <tr class="table-ars">
        <th>
            ID
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sex)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            Role
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmpID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @if (item.Sex)
                {
                    @:Male
                }
                else
                {
                    @:Female
                }
            </td>
            <td>
                @item.DoB.ToString("dd/MM/yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @if (item.Role == 0)
                {
                    @:Admin
                }
                else
                {
                    @:Clerk
                }
            </td>
            <td>
                <a href="/arsadmin/employeeedit?id=@item.EmpID" class="btn btn-warning" @*onclick="setModal('edit','@item.EmpID')"*@>Edit</a>
                @if (item.Role != 0)
                {
                    <button class="btn btn-danger" data-toggle="modal" data-target="#modal" onclick="setModal('delete','@item.EmpID')">Delete</button>
                }
                else
                {
                    if (AirlinesReservationSystem.Models.arsadmin.EmployeeDAO.GetEmployeeList().Where(e => e.IsActive).Where(e => e.Role == 0).Count() > 1)
                    {
                        <button class="btn btn-danger" data-toggle="modal" data-target="#modal" onclick="setModal('delete','@item.EmpID')">Delete</button>
                    }
                    else
                    {
                        <button class="btn btn-secondary" data-toggle="tooltip" title="Cannot delete because there's only one admin active." data-placement="bottom">Delete</button>
                    }
                }

                @*@if (((AirlinesReservationSystem.Models.Employee)Session["employee"]).EmpID != item.EmpID || item.Role != 0)
        {
            <button class="btn btn-warning" onclick="setModal('edit','@item.EmpID')">Edit</button>
            <button class="btn btn-danger" data-toggle="modal" data-target="#modal" onclick="setModal('delete','@item.EmpID')">Delete</button>
        }
        else
        {
            <button class="btn btn-secondary" data-toggle="tooltip" title="Cannot edit admmin." data-placement="bottom">Edit</button>
            <button class="btn btn-secondary" data-toggle="tooltip" title="Cannot delete admin." data-placement="bottom">Delete</button>
        }*@

            </td>
        </tr>
    }

</table>

<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>