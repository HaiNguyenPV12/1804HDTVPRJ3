<script>
    $(document).ready(function () {
        var i = 0;
        appendForm();
        i = i + 1;

        function appendForm() {
            $.post("/arsadmin/RouteAddTemplate?index=" + i, function (result) {
                $("#RouteAddList").append(result);
            });
        }

        $('#btnAppend').click(function (e) {
            e.preventDefault();
            appendForm();
            i = i + 1;
        });

        $('#RouteAddList').bind('DOMNodeRemoved', function (e) {
            if (i > 0) {
                i = i - 1;
            }
        });
    });
</script>